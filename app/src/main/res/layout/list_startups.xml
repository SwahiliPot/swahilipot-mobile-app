        <!--android:layout_height="wrap_content"-->
        <!--android:layout_toRightOf="@+id/thumbnail"-->
        <!--android:layout_below="@id/email"-->
        <!--android:textColor="#5d5d5d"-->
        <!--android:textStyle="bold" />-->
</RelativeLayout>